
<div stle="background-color: #eaeaea">
  <div class="container">
    <h1 class="featurette-heading">
        <% @contacts.each do |contact| %>
              <%= contact.title %></h1>
        <% end %>
     </div>
    <hr class="featurette-divider">
</div>

  <div class="container pt-5 pl-5">
    <div class="row">
      <div class="col-sm-12 col-md-6 col-lg-6">
        <%= render "partials/contact_mail_form"%>
      </div>
      <div class="col-sm-12 col-md-6 col-lg-6 lead mt-3">
                <% @contacts.each do |contact| %>   
                    <p>
                       <%= fa_icon "home", style: "font-size: 1.5rem", class: "pr-3" %> <%= contact.address %>
                        <%= contact.city %>
                        <%= contact.province %>
                        <%= contact.country %>
                        <%= contact.postcode %>
                    </p>
                    <hr class="featurette-divider">
                    <p><%= fa_icon "envelope", style: "font-size: 1.5rem", class: "pr-3"%><%= contact.email %></p>
                    <hr class="featurette-divider">
                    <p><%= fa_icon "globe", style: "font-size: 1.5rem", class: "pr-3"%><%= contact.website %></p>
                    <hr class="featurette-divider">
                    <p><%= fa_icon "phone", style: "font-size: 1.5rem", class: "pr-3"%><%= contact.tel %></p>
                    <p><%= contact.fax %></p>
                    <hr class="featurette-divider">
                    <p><%= fa_icon "mobile", style: "font-size: 1.5rem", class: "pr-3"%><%= contact.mobile %></p>
                    <hr class="featurette-divider">
                    <p><%= fa_icon "facebook", style: "font-size: 1.5rem", class: "pr-3"%><%= contact.facebook %></p>
                    <p><%= link_to 'Edit', edit_contact_path(contact) %></p>
                 
      </div>
    </div>           <% end %>
  </div>


<br>


