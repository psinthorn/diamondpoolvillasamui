<h2 class="text-muted">Enquiry Form</h2>
<%= form_with() do |form| %>
  <div class="form-group">
    <%= form.label :Name %>
    <%= form.text_field :name, class: 'form-control', rows: 8 %>
  </div>

  <div class="form-group">
    <%= form.label :Email %>
    <%= form.text_field :email, class: 'form-control', rows: 8 %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 8 %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
